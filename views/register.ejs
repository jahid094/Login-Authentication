<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include ('./partials/messages') %>
      <form action="/register" method="POST">
        <div class="form-group">
          <label for="name">First Name</label>
          <input
            type="name"
            id="firstname"
            name="firstname"
            class="form-control"
            placeholder="Enter First Name"
            value="<%= typeof firstname != 'undefined' ? firstname : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="name">Last Name</label>
          <input
            type="name"
            id="lastname"
            name="lastname"
            class="form-control"
            placeholder="Enter last Name"
            value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
          />
        </div>


        <div class="form-group">
          <label for="gender">Gender</label>
          <div class="form-check">
            <input type="radio" name="gender" id="gender" value="male" > Male
            <input type="radio" name="gender" id="gender" value="female"> Female
          </div>
        </div>

        <div class="form-group">
          <label for="age">Age</label>
          <input
            type="age"
            id="age"
            name="age"
            class="form-control"
            placeholder="Enter age"
            value="<%= typeof age != 'undefined' ? age : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="phone">Phone</label>
          <input
            type="phone"
            id="phone"
            name="phone"
            class="form-control"
            placeholder="Enter phone"
            value="<%= typeof phone != 'undefined' ? phone : '' %>"
          />
        </div>




        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>


        <div class="form-group">
          <label for="height">Height</label>
          <input
            type="height"
            id="height"
            name="height"
            class="form-control"
            placeholder="Enter height"
            value="<%= typeof height != 'undefined' ? height : '' %>"
          />
        </div>

        <div class="form-group">
          <label for="weight">Weight</label>
          <input
            type="weight"
            id="weight"
            name="weight"
            class="form-control"
            placeholder="Enter weight"
            value="<%= typeof weight != 'undefined' ? weight : '' %>"
          />
        </div>

        <div class="form-group">
          <div class="form-check">
            <input type="radio" name="userType" id="userType" value="patient" > Patient
            <input type="radio" name="userType" id="userType" value="Gurdian"> Gurdian
          </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/login">Login</a></p>
    </div>
  </div>
</div>
